@model HotelManagementSystem_CoreMvc.Models.GeustReserveRoom

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Arrival Time
            </th>
            <th>
                Departure Date
            </th>
            @*<th>
                Adult
            </th>
            <th>
                Child
            </th>*@
            <th>
                Guest
            </th>
            @*<th>
                Room
            </th>
            <th>
                RoomQuantity
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reservations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Adult.AdultId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Child.ChildId)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Guest.FullName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Room.RoomTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomQuantity.RoomQuantityId)
                </td*@>
                <td>
                    @Html.ActionLink("Select", "getRelatedGuestReserve", new { OrderId = item.ReservasionId }, new { @class = "btn" })|
                    <a asp-action="Edit" asp-route-id="@item.ReservasionId"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> |
                    <a asp-action="Details" asp-route-id="@item.ReservasionId"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservasionId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>


