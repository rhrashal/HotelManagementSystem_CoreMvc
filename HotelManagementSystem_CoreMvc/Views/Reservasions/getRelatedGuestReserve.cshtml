@model HotelManagementSystem_CoreMvc.Models.GeustReserveRoom

@{
    ViewData["Title"] = "getRelatedGuestReserve";
}

<h2>getRelatedGuestReserve</h2>

@if (Model.Rooms != null)
{
    <partial name="_RoomList" />
    @*@Html.Partial("_RoomList")*@
}

@if (Model.Reservations != null)
{
    @*@Html.Partial("_ReserveList")*@
    <partial name="_ReserveList" />
}


@if (Model != null)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>*@
                <th>
                    Address
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone
                </th>
                <th>
                    NID_No
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Guests != null)
            {
                @foreach (var item in Model.Guests)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NID_No)
                        </td>
                        <td>
                            @Html.ActionLink("select", "getRelatedGuestReserve", new { GuestId = item.GuestId }, new { @class = "btn" })
                            @*<a asp-action="Edit" asp-route-id="@item.GuestId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.GuestId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.GuestId">Delete</a>*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}