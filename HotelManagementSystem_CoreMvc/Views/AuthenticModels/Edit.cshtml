@model HotelManagementSystem_CoreMvc.Models.AuthenticModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>AuthenticModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
               <input asp-for="RoleId" type="hidden"/>
                <input value="@ViewData["RollModel"]" readonly="readonly" class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControllerName" class="control-label"></label>
                <input asp-for="ControllerName" readonly="readonly" class="form-control" />
                @*<select asp-items="ControllerName" class="form-control"></select>*@
                <span asp-validation-for="ControllerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Retrive" /> @Html.DisplayNameFor(model => model.Retrive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Insert" /> @Html.DisplayNameFor(model => model.Insert)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Update" /> @Html.DisplayNameFor(model => model.Update)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Delete" /> @Html.DisplayNameFor(model => model.Delete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

